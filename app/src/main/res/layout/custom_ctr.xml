<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/relativelayout_3"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:gravity="center_vertical"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear15"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/back"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_arrow_back_white"
				android:scaleType="center" />
			<TextView
				android:id="@+id/mtext"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="20dp"
				android:text="Untitled"
				android:textSize="16sp"
				android:textColor="#FFFFFF"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/more"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:src="@drawable/ic_settings_white"
				android:scaleType="center" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear14"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:translationY="90.0dp"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear18"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/exo_rew"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/rewind"
				android:scaleType="centerInside" />
			<LinearLayout
				android:id="@+id/linear16"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/exo_pause"
				android:focusable="false"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:src="@drawable/pause"
				android:scaleType="centerInside" />
			<ProgressBar
				android:id="@+id/progress"
				android:focusable="false"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:indeterminate="false"
				style="?android:progressBarStyle"
				android:visibility="gone" />
			<ImageView
				android:id="@+id/exo_play"
				android:focusable="false"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:src="@drawable/playarrow"
				android:scaleType="centerInside" />
			<LinearLayout
				android:id="@+id/linear17"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/exo_ffwd"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/arrow"
				android:scaleType="centerInside" />
			<LinearLayout
				android:id="@+id/linear19"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1" />
		</LinearLayout>
		<FrameLayout
			android:id="@+id/previewFrameLayout"
			android:layout_width="205dp"
			android:layout_height="130dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			app:layout_constraintDimensionRatio="16:9"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintWidth_default="percent"
			app:layout_constraintWidth_percent="0.35">

			<com.google.android.material.card.MaterialCardView
				android:layout_width="200dp"
				android:layout_height="125dp"
				app:cardCornerRadius="10dp"
				app:cardBackgroundColor="@android:color/transparent"
				android:layout_gravity="center_horizontal"
				app:strokeColor="@color/colorPrimaryDark"
				app:strokeWidth="1dp"
				>
				<ImageView
					android:id="@+id/imageView2"
					android:focusable="false"
					android:layout_width="200dp"
					android:layout_height="125dp"
					android:scaleType="fitCenter"
				 />
			</com.google.android.material.card.MaterialCardView>

		</FrameLayout>
		<com.github.rubensousa.previewseekbar.exoplayer.PreviewTimeBar
			android:id="@+id/exo_progress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			app:previewAnimationEnabled="false"
			app:previewFrameLayout="@id/previewFrameLayout" />
		<LinearLayout
			android:id="@+id/linear20"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/exo_position"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="8dp"
				android:text="0:00"
				android:textSize="12sp"
				android:textColor="#FFFFFF"
				android:layout_weight="1" />
			<TextView
				android:id="@+id/exo_duration"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:paddingLeft="8dp"
				android:text="0:00"
				android:textSize="12sp"
				android:textColor="#FFFFFF" />
			<ImageView
				android:id="@+id/bt_fullscreen"
				android:focusable="false"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/ic_gofullscreen"
				android:scaleType="centerCrop" />
			<ImageView
				android:id="@+id/pip"
				android:focusable="false"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/ic_picture_in_picture_white"
				android:scaleType="center" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
